{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": ["dom", "es2019"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["example/**/*", "src/**/*"]
}
